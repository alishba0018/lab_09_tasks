#include <stdio.h>
void add(float a,float b){
        printf("ans is: %f",a+b);
    }
void sub(float a,float b){
        printf("ans is: %f",a-b);
    }
void mul(float a,float b){
        printf("ans is: %f",a*b);
    }
void div(float a,float b){
        printf("ans is: %f",a/b);
    }
int main(){
    float a,b;
    int c;
    printf("enter first number:");
    scanf("%f",&a);
    printf("enter second number:");
    scanf("%f",&b);
    printf("enter operation (1 for addition),(2 for subtraction),(3 for multiplication),(4 for division):");
    scanf("%d",&c);
    if(c==1){
        add(a,b);
    }
    else if(c==2){
        sub(a,b);
    }
    else if(c==3){
        mul(a,b);
    }
    else if(c==4){
        div(a,b);
    }
    else{
        printf("invalid input!");
    }
    return 0;
}
