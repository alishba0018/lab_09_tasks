#include <stdio.h>
#include <string.h>

void reverse_string(char str[], char reversed[]) {
    int len = strlen(str);
    int j = 0;
    for (int i = len - 1; i >= 0; i--) {
        reversed[j++] = str[i];
    }
    reversed[j] = '\0';
}

int main() {
    char a[5][20];
    char arev[5][20];
    printf("Enter 5 words: \n");
    for (int i = 0; i < 5; i++) {
        scanf("%s", a[i]);
    }
    printf("\nWords entered: \n");
    for (int i = 0; i < 5; i++) {
        printf("%s\n", a[i]);
    }
    for (int i = 0; i < 5; i++) {
        reverse_string(a[i], arev[i]);
    }
    for(int i=0;i<5;i++){
    int result = strcmp(a[i], arev[i]);
    if(result==0){
        printf("%s is a palindrome \n",a[i]);
    }
    else{
        printf("%s is not a palindrome\n",a[i]);
    }
    }
    return 0;
}
